<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">

    <%= form.number_field :custid, class:"form-control", placeholder:"顧客ID" %>
  </div>

  <div class="mb-3">

    <%= form.text_field :name, class:"form-control", placeholder:"氏名" %>
  </div>

  <div class="mb-3">

    <%= form.number_field :age, class:"form-control", placeholder:"年齢" %>
  </div>

  <div class="mb-3">

    <%= form.text_field :gender, class:"form-control", placeholder:"性別" %>
  </div>

  <div class="mb-3">

    <%= form.text_field :email, class:"form-control", placeholder:"メールアドレス" %>
  </div>

  <div class="mb-3">

    <%= form.password_field :pass, class:"form-control", placeholder:"パスワード" %>
  </div>

  <div>
    <%= form.submit "登録" ,class:"btn btn-dark"%>
  </div>
<% end %>
