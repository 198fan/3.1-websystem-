<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4"><%= @order.order_id %></h1>
  <p class="lead">
    店舗ID: <%= @order.store_id %> <br>
    顧客ID: <%= @order.customer_id %> <br>
    金額: <%= @order.money %> <br>
    日付:  <%= @order.transdate %>
  </p>
  <p class="lead">
    <div style="margin-left:auto;margin-right: 0;display: inline-block;">
    <%= link_to "更新", edit_order_path(@order), class:"btn btn-dark"%>
    </div>
    <div style="margin-left:0;margin-right: auto;display: inline-block;">
    <%= button_to "削除", @order, method: :delete, class:"btn btn-danger" %>
    </div>
  </p>
  <hr class="my-4">
</div>

<div style="margin: auto;text-align: right;">
  <%= link_to "戻る", orders_path, class:"btn btn-secondary" %>
</div>
