<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.text_field :isbn, class:"form-control", placeholder:"ISBN" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :title, class:"form-control", placeholder:"タイトル" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :author, class:"form-control", placeholder:"著者" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :pubcom, class:"form-control", placeholder:"出版社" %>
  </div>

  <div class="mb-3">
    <%= form.number_field :price, class:"form-control", placeholder:"価格" %>
  </div>

  <div class="mb-3">
    <%= form.file_field :image, class:"form-control" %>
  </div>

  <div>
    <%= form.submit "登録" ,class:"btn btn-dark" %>
  </div>
<% end %>
