<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4"><%= @store.storename %></h1>
  <p class="lead">
    住所: <%= @store.address %> <br>
    メールアドレス: <%= @store.mail %>
  </p>
  <p class="lead">
    <div style="margin-left:auto;margin-right: 0;display: inline-block;">
    <%= link_to "更新", edit_store_path(@store), class:"btn btn-dark"%>
    </div>
    <div style="margin-left:0;margin-right: auto;display: inline-block;">
    <%= button_to "削除", @store, method: :delete, class:"btn btn-danger" %>
    </div>
  </p>
  <hr class="my-4">
</div>

<div style="margin: auto;text-align: right;">
  <%= link_to "戻る", stores_path, class:"btn btn-secondary" %>
</div>

